<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="avatar">
        <item name="android:layout_width">@dimen/avatar_size</item>
        <item name="android:layout_height">@dimen/avatar_size</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="avatar.left" parent="avatar">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="avatar.right" parent="avatar">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>


    <style name="ChatDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>